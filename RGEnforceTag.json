{
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Resources/subscriptions/resourceGroups"
        },
        {
          "not": {
            "field": "[concat('tags.',parameters('tagName'))]",
            "equals": "[parameters('tagValue')]"
          }
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {
    "tagName": {
      "type": "String",
      "metadata": {
        "displayName": "tagName",
        "description": "Name of the tag",
        "strongType": "tagName"
      }
    },
    "tagValue": {
      "type": "String",
      "metadata": {
        "displayName": "tagValue",
        "description": "Value of the tag",
        "strongType": "tagValue"
      }
    }
  },
  "metadata": {}
}